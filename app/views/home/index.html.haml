- content_for(:title, 'Dudefest.com | The Home Of All Things Dudefest')
- content_for :head do
  = tag :meta, property: 'og:title', 
               content: 'Dudefest.com | Home Of All Things Dudefest'
  = tag :meta, property: 'og:url', content: root_url
  = tag :meta, property: 'og:image', content: image_url('/DudefestSymbol.png')

#main_column.home_column
  #top_articles
    - @articles.first(2).each do |article|
      = render partial: '/articles/top_article', locals: { article: article }
  #shit_to_read.main_top SHIT TO READ
  #article_summaries
    - if @articles.count > 2
      - @articles.last(@articles.count - 2).each do |article|
        = render partial: '/articles/summary', locals: { article: article }

